#!/bin/bash

user="root"
password="ta0mee"
host="localhost"
tmp_file="table.sql"
if [ "$1" = "" ]; then
	echo "need userid"
	exit
fi
userid=$1
let "db_id=$userid%100 "
let "table_id=($userid/100)%100/10"

dbx=`printf "%02d" $db_id`
tbx=`printf "%01d" $table_id`

create_sql() {
cat <<EOF >$tmp_file
	select * from   USER_$dbx.t_user_card_$tbx
		where userid=$userid;
EOF
}
create_sql 
cat $tmp_file | mysql -u $user --password="$password" -h $host  
